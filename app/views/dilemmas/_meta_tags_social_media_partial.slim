// facebook/google meta graphs
- dilemma_description = strip_tags(@dilemma.description)
meta property="fb:app_id" content="#{ENV['FACEBOOK_AUTH_ID']}"
meta property="og:title" content="#{@dilemma.title}"
meta property="og:type" content="website"
meta property="og:url"  content="#{dilemma_url(@dilemma)}"
meta property="og:description" content="#{strip_tags(dilemma_description)}"
- if @dilemma.cover_photo.present?
  - if Medium.find_by(id: @dilemma.cover_photo).youtube_url
    - photo = 'http://img.youtube.com/vi/' + Medium.find_by(id: @dilemma.cover_photo).youtube_url + '/0.jpg'
  - else
    - photo = Medium.find_by(id: @dilemma.cover_photo).file
meta property="og:image" content="#{image_url(photo)}"
meta property="og:image:width"  content="500"
meta property="og:image:height"  content="300"
//twitter meta graphs
meta name="twitter:card" content="summary"
meta name="twitter:site" content="@dilemmaguru"
meta name="twitter:title" content="#{@dilemma.title}"
meta name="twitter:description" content="#{strip_tags(dilemma_description)}"
// find cover image for both
- if @dilemma.cover_photo.present?
  - if Medium.find_by(id: @dilemma.cover_photo).youtube_url
    - photo = 'http://img.youtube.com/vi/' + Medium.find_by(id: @dilemma.cover_photo).youtube_url + '/0.jpg'
  - else
    - photo = Medium.find_by(id: @dilemma.cover_photo).file
meta name="twitter:image" content="#{image_url(photo)}"
